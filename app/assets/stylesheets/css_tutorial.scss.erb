	}
	30%{
		background-image: url("<%= asset_path 'C_logo.png' %>")
	}
	40%{
		background-image: url("<%= asset_path 'Cpp_logo.png' %>")
	}
	50%{
		background-image: url("<%= asset_path 'Batch_logo.png' %>")
	}
	60%{
		background-image: url("<%= asset_path 'Dart_logo.png' %>")
	}
	70%{
