	}
}


@keyframes ascii_animation{
	10%{
		content: '__'
	}
	20%{
		content: '__|-'
	}
	30%{
		content: '__|--|~'
	}
	40%{
		content: '__|--|~·'
	}
	50%{
		content: '__|--|~·|'
	}
	60%{
		content: '__|--|'
	}
	70%{
		content: '__|-'
	}
	80%{
		content: '__|'
	}
	90%{
		content: '__'
	}
	100%{
		content: '_'
	}
}
.animation{
	background-size: 100%;
	background-repeat: no-repeat;
	animation: 5s infinite animate;
	width: 50px;
	height: 60px;
}

.ascii-animation::before{
	animation: 7s infinite ascii_animation;
}
