.circle{
	background: #FF6C00;
	border: 3px solid #FFBB08;
	border-radius: 100%;
	width: 60px;
	height: 60px;
}

.circle .circle-down{
	position: relative;
	display: none;
}

.circle:hover{
	.circle-down{
		display: inline;
		down: 40px;
		background-color: #666666;
		color: white;
	}
}

@media screen and (min-width: 900px){
	.hover-touch::after{
		content: 'Hover around the small circles to see tips before starting';
	}
}

@media screen and (max-width: 900px){
	.hover-touch::after{
		content: 'Touch the small circles to see tips before starting';
	}
}

@keyframes animate{
	10%{
		background-image: url("<%= asset_path 'Bash_logo.png' %>")
	}
	20%{
